<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">



    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cream"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:src="@drawable/tangan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="@color/blue"
                />

            <TextView
                android:id="@+id/mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai dari yang dekat"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textSize="30dp"
                android:textColor="#1F272A"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

            <ImageView
                android:id="@+id/search"
                android:layout_width="357dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mulai"
                android:background="@drawable/search"

                />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/mag"
                android:layout_below="@id/mulai"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="340dp"
                />

            <EditText
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_below="@id/mulai"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:hint="@string/hint1"
                android:fontFamily="@font/source_sans_pro_extralight"
                android:textSize="15dp"
                android:backgroundTint="@color/trans"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blue"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Cari Panti"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/ca"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ca"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Cari panti asuhan atau panti difabel untuk bekerjasama"
                android:textSize="15dp"
                android:id="@+id/ca1"
                />

            <HorizontalScrollView
                android:id="@+id/kota"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/ca1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginTop="7dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/mlg"
                        />

                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/sby"
                        android:layout_marginLeft="105dp"
                        />

                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/bdg"
                        android:layout_marginLeft="216dp"
                        />

                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/jkt"
                        android:layout_marginLeft="327dp"
                        />


                </RelativeLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kota"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Cari relawan dan donatur"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/car"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Cari panti asuhan atau panti difabel untuk bekerjasama"
                android:textSize="15dp"
                android:id="@+id/car1"
                />

            <Button
                android:id="@+id/a"
                android:layout_width="359dp"
                android:layout_height="90dp"
                android:background="@drawable/a"
                android:layout_below="@id/car1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/b"
                android:layout_width="359dp"
                android:layout_height="90dp"
                android:background="@drawable/b"
                android:layout_below="@id/a"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/c"
                android:layout_width="359dp"
                android:layout_height="90dp"
                android:background="@drawable/c"
                android:layout_below="@id/b"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/d"
                android:layout_width="359dp"
                android:layout_height="90dp"
                android:background="@drawable/d"
                android:layout_below="@id/c"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/trans"
                android:layout_below="@id/d"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="0dp"
                android:text="Relawan dan donatur lainnya >"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textAllCaps="false"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/d"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Pencarian sebelumnya"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/bef"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/bef1"
                android:layout_below="@id/bef"
                android:id="@+id/bef1"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/bef2"
                android:layout_below="@id/bef1"
                android:id="@+id/bef2"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>