<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="Profil"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/pro"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:background="@drawable/prof"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/p3"
        android:layout_below="@id/top"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="20dp"
        android:text="Panti Asuhan\nSejahtera"
        android:textColor="@color/black"
        android:layout_below="@id/top"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="43dp"
        android:id="@+id/pan"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/p1"
        android:layout_below="@id/pan"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="23dp"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/p2"
        android:layout_below="@id/pan"
        android:layout_marginLeft="268dp"
        android:layout_marginTop="23dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/verified"
        android:layout_below="@id/top"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/set"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:background="@drawable/ta"
        android:layout_below="@id/pro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/help"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:background="@drawable/ba"
        android:layout_below="@id/set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:background="@drawable/kel"
        android:layout_below="@id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

</RelativeLayout>